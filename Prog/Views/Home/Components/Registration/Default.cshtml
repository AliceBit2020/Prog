@{
    ViewData["Title"] = "Registration";
}
@model UserRegBinding


<style>

	.input-validation-error
	{
		border-color:red;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-3 ">
		</div>
		<div class="col-6 rounded " id="box">
			<form asp-controller="Home" asp-action="RegisterResult" method="post">
				<div class="form-group">
					<label asp-for="Login" class="control-label col-12 text-start mt-3"></label>
					<input asp-for="Login" class="form-control">
					<span asp-validation-for="Login" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Email" class="control-label col-12 text-start mt-3"></label>
					<input asp-for="Email" class="form-control">
					<span asp-validation-for="Email" class="text-danger"></span>

				</div>
				<div class="form-group" >
					<label asp-for="Password" class="control-label col-12 text-start mt-3"></label>
					<input asp-for="Password" class="form-control">
					<span asp-validation-for="Password" class="text-danger"></span>

				</div>
				<div class="form-group">
					<label asp-for="PasswordConfirm" class="control-label col-12 text-start mt-3"></label>
					<input asp-for="PasswordConfirm" class="form-control">
					<span asp-validation-for="PasswordConfirm" class="text-danger"></span>

				</div>
				<button class="btn btn-primary m-3" type="submit">Register</button>
			</form>
		</div>
		<div class="col-3">
		</div>
	</div>
</div>

